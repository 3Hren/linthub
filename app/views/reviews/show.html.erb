<div class="row">
    <div class="col-md-10">
        <h3>
            <%= @review.github_user %>/<%= @review.repo %>
        </h3>
    </div>
    <div class="col-md-2">
        <h3>
            <span class="label label-<%= @passed ? "success" : "danger" %>"><%= @passed ? "Success" : "Failure" %></span>
        </h3>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Description</th>
            <th>SHA</th>
        </tr>
    </thead>

    <tbody>
        <% @review.checks.each do |check| %>
        <tr class=<%= check.passed ? "success" : "danger"%>>
            <td><%= check.lint.description %></td>
            <td><%= check.sha %></td>
        </tr>
        <% end %>
    </tbody>
</table>
